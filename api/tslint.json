{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [true, "single"],
        "no-console": [false, "log", "error"],
        "indent": [true, "tabs", 4]
    },
    "rulesDirectory": [],
    "include": [
        "src/controllers/**/*.ts",
        "src/middlewares/**/*.ts",
        "src/models/**/*.tsx",
        "src/interfaces/**/*.ts"
    ]
}